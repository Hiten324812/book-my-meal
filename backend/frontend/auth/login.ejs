    <!-- Font-icon css-->
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/line-awesome/1.3.0/line-awesome/css/line-awesome.min.css">
  </head>
  <body class="mt-0">
    <section class="login-content">
      <div class="login-content-lt"></div>
      <div class="login-content-rt">
        <div class="login-box">
        <form class="login-form" action="/login" method="post">
          <div class="logo-wrapper">
            <img src="/images/logo.svg" alt="Rishabh Software">
            <span>Meal Facility</span>
          </div>
          <h3 class="login-head">Sign in to your account</h3>
          <p class="login-text">Enter your credentials to access your account.</p>
          <div class="form-group">
            <label class="control-label">User Name</label>
            <div class="input-addon">
              <input class="form-control" type="text" placeholder="Robert Smith" name="email" autofocus>
            <div class="icon-after icon-green"><i class="icon-check"></i></div>
            </div>
            <% if (errormessage) { %>
          <div class="error-block"> <%= errormessage %> </div> 
            <% } %>
          </div>
          <div class="form-group">
            <label class="control-label">Password</label>
            <div class="input-addon">
              <input id="password-field" class="form-control" type="password" name="password">
              <span toggle="#password-field" class="icon-eye-close field-icon toggle-password"></span>
            </div>
          </div>

          <div class="d-flex align-items-center justify-content-between">
            <div class="form-group mb-0">
            <label class="custom-checkbox mb-0"><span class="checkbox__title">Remember Me</span>
              <input class="checkbox__input" type="checkbox"/><span class="checkbox__checkmark"></span>
            </label>
          </div>
          <div class="form-group mb-0">
            <div class="utility">
              <p><a href="/reset" class="form-link">Forgot Password?</a></p>
            </div>
          </div>
          </div>
        
          <div class="form-group btn-container">
            <button class="btn btn-xl btn-primary" type="submit">  Sign in  </button>
          </div>
        </form>

        <div style="margin-top : 20px; font-size : 17px; text-align : center ;">

        <p> Don't have an account ? <span> <a href="/signup"> Register Here  </a> </span> </p>

        </div>

      </div>
      </div>
      
      
      
    </section>
    <!-- End Footer -->
    <!-- End  Page Content -->
    <!-- Essential javascripts for application to work-->
    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
    <!-- The javascript plugin to display page loading on top-->
    <script src="js/plugins/pace.min.js"></script>
    <!-- Page specific javascripts-->
     
    <script>
      $(".toggle-password").click(function() {
  
  $(this).toggleClass("icon-eye-close icon-eye-open");
  var input = $($(this).attr("toggle"));
  if (input.attr("type") == "password") {
    input.attr("type", "text");
  } else {
    input.attr("type", "password");
  }
  });
      </script>
  
  </body>
</html>